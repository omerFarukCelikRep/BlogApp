{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Elastic.Serilog.Sinks"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithAssemblyName",
      "WithCorrelationId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{Timestamp:HH:mm:ss} {Level:u11}] {Message:lj}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "Path": "Logs/log-.log",
          "RollingInterval": "Day",
          "RollOnFileSizeLimit": true,
          "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "Formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Properties": {
      "ApplicationName": "BlogApp"
    },
    "File": {
      "Enabled": true,
      "Path": "Logs/log-.log",
      "RollingInterval": "Day",
      "Formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
      "OutputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
    },
    "Elastic": {
      "Enabled": false,
      "Urls": [
        "http://localhost:9200"
      ]
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "BlogApp",
    "Audience": "BlogAppUsers",
    "SecretKey": "super-secret-key-12345",
    "ExpiryMinutes": 60
  },
  "KeyRotation": {
    "Period": "7:00:00:00"
  }
}
